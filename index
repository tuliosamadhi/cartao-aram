<script>
  // ===== CONFIG - replace values =====
  const CONFIG = {
    linkedin: "REPLACE_WITH_LINKEDIN",
    website: "REPLACE_WITH_WEBSITE",
    phoneForWhats: "REPLACE_WITH_PHONE_ONLY", // digits only
  };
  // ===== end CONFIG =====

  document.getElementById('lnkLinkedin').href = CONFIG.linkedin;
  document.getElementById('lnkSite').href = CONFIG.website;
  document.getElementById('lnkWhats').href = "https://wa.me/" + CONFIG.phoneForWhats;
  document.getElementById('year').textContent = new Date().getFullYear();

  // generate QR for this page url
  function makeQR(url){
    return 'https://chart.googleapis.com/chart?cht=qr&chs=360x360&chl='+encodeURIComponent(url)+'&chld=M|1';
  }
  window.addEventListener('load', ()=>{
    const url = window.location.href;
    document.getElementById('qrImg').src = makeQR(url);
  });
</script>
